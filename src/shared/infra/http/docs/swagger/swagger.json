{
  "openapi":"3.0.0",
  "info": {
    "title":"Rentalx documentation",
    "description":"Esta é a ducumentação da api Rentalx",
    "version":"1.0",
    "contact":{
      "name":"Heitor Neto",
      "email":"heitorh3@gmail.com"
    },
    "servers": {
      "url": "{protocol}://localhost:3334/api-doc",
      "description": " Optional server description, e.g. Internal staging server for testing",
      "variables": {
        "protocol": {
          "enum":["http", "https"],
          "default":"http"
        }
      }
    }
  },
  "paths": {
    "/users":{
      "post": {
        "tags":["users"],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400":{
            "description": "Email address already exists"
          },
          "default":{
            "description": "Unexpected error"
          }
        }
      },
      "get":{
        "tags": ["users"],
        "summary":"listar todos os usuários",
        "description":"litar todos os usuários",
        "responses": {
          "200":{
            "description": "Success",
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "ping": {
      "get": {
        "server":{
          "url": "http://localhost:3334",
          "description":" Override base path for the GET /ping operation"
        }
      }
    },
    "profile":{
      "put": {
        "tags": ["profile"],
        "summary":"edita os dados de um usuário",
        "description":"Editar os dados de um usuário",
        "operationID": "user.id",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/User"
              }
            }
          }
        },
        "responses":{
          "201":{
            "description": "Operação realizada com sucesso",
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components":{
    "schemas": {
      "User" : {
        "type":"object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "email",
          "cpf",
          "password"
        ]
        ,
        "example": {
          "name":"Jhon Doe",
          "email":"jhondoe@gmail.com",
          "cpf":"16018674688",
          "password":"floresta"
        }
      }
    }
  }
}
